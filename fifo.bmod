! ${GHOST:-false} || return 0

if
	{ [[ -z "${FIFO:-}" ]] && sf_mkfifo -qo FIFO; } ||
	{ [[ -z "${fifo_fd:-}" ]] && sf_mkfifo -qf "$FIFO"; } ||
	[[ -p "$FIFO" ]]
then
	exec {fifo_fd}<>"$FIFO"
elif [[ -z "${fifo_fd:-}" ]]; then
	sf_error "FIFO is FUBAR: ${FIFO:-}"
	exit 1
fi

function fifo_tick
{
	local line
	while read -t0 -u "$fifo_fd"; do
		read -t1 -r -u "$fifo_fd" line || break
		[[ -n "$line" ]] || continue
		sf_stdout "$MOD: $line"
		tx "$line"
	done
}
