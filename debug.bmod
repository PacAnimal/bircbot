! ${GHOST:-false} || return 0

if [[ -n "$reply" ]]; then
	case "$data" in
		"debug")
			if admin_verbosehas "$(src_host)"; then
				if ! $_sf_verbose; then
					reply "Debug mode: On"
					_sf_verbose=true
				else
					reply "Debug mode: Off"
					_sf_verbose=false
				fi
			fi
		;;
		"moddebug")
			if admin_verbosehas "$(src_host)"; then
				if ! $moddebug; then
					reply "Mod debug: On"
					moddebug=true
				else
					reply "Mod debug: Off"
					moddebug=false
				fi
			fi
		;;
		"cmddebug")
			if admin_verbosehas "$(src_host)"; then
				if [[ "$-" != *"x"* ]]; then
					reply "Cmd debug: On"
					set -x
				else
					reply "Cmd debug: Off"
					set +x
				fi
			fi
		;;
	esac
fi
